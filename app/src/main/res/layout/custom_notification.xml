<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="horizontal">

    <ImageView
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imageLauncher"
        android:layout_width="wrap_content"
        android:layout_margin="10dp"
        android:layout_height="match_parent" />

    <TextView
        android:text="@string/app_name"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="16sp"
        android:layout_toRightOf="@+id/imageLauncher"
        android:layout_toEndOf="@+id/imageLauncher"
        android:layout_alignTop="@+id/imageLauncher" />

    <TextView
        android:text="@string/app_name_notification"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textSize="12sp"
        android:layout_below="@+id/textView2"
        android:layout_toRightOf="@+id/imageLauncher"
        android:layout_toEndOf="@+id/imageLauncher" />

    <ImageView
        android:layout_height="wrap_content"
        android:tint="@color/color0"
        android:id="@+id/imageExit"
        android:layout_width="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:padding="6dp" />

</RelativeLayout >